{
  "name": "packaging-tests",
  "version": "1.0.0",
  "private": true,
  "dependencies": {
    "ohm-js": "^16.0.0"
  },
  "scripts": {
    "test:ts-cjs": "ts-node test-ts.ts",
    "test:ts-esm": "ts-node --project tsconfig.esm.json test-ts.ts",
    "test:ts": "yarn test:ts-cjs && yarn test:ts-esm && ts-node test-typings.ts",
    "test": "uvu . -i '\\.ts' && yarn test:ts",
    "test:watch": "watchlist . -- yarn test"
  },
  "devDependencies": {
    "acorn": "^8.8.1",
    "ts-node": "^10.9.1",
    "uvu": "^0.5.6",
    "watchlist": "^0.3.1"
  }
}
